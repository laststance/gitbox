{
  "name": "@gitbox/redux-storage-middleware",
  "version": "0.2.0",
  "description": "SSR-safe Redux middleware for LocalStorage persistence with hydration control",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "redux",
    "middleware",
    "localstorage",
    "redux-toolkit",
    "persistence",
    "ssr",
    "hydration",
    "next.js"
  ],
  "author": "Laststance.io",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/laststance/gitbox"
  },
  "peerDependencies": {
    "@reduxjs/toolkit": "^2.0.0",
    "react-redux": "^9.0.0"
  },
  "optionalDependencies": {
    "lz-string": "^1.5.0",
    "superjson": "^2.0.0"
  },
  "devDependencies": {
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "playwright": "^1.57.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
